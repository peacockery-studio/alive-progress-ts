{
  "name": "alive-progress",
  "version": "1.0.0",
  "description": "A beautiful, animated progress bar for CLI applications in TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peacockery-studio/alive-progress-ts.git"
  },
  "bugs": {
    "url": "https://github.com/peacockery-studio/alive-progress-ts/issues"
  },
  "homepage": "https://github.com/peacockery-studio/alive-progress-ts#readme",
  "bin": {
    "alive-progress-demo": "./dist/demo.js"
  },
  "scripts": {
    "build": "bun run tsc",
    "dev": "bun run tsc --watch",
    "demo": "bun run dist/demo.js",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "typecheck": "bun run tsc --noEmit",
    "lint": "bun tsc --noEmit && bun x ultracite check",
    "lint:fix": "bun x ultracite fix",
    "prepublishOnly": "bun run build",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "progress",
    "progressbar",
    "progress-bar",
    "cli",
    "terminal",
    "spinner",
    "animation",
    "alive",
    "beautiful"
  ],
  "author": "Chi Kingsley",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@types/bun": "latest",
    "@types/node": "^20.10.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.3.0",
    "ultracite": "6.5.0"
  },
  "dependencies": {
    "grapheme-splitter": "^1.0.4"
  },
  "files": [
    "dist"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  }
}
